---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
import PerksSection from "../components/PerksSection.astro";
import { perksEn } from "../data/perks.en";
import StatementSection from "../components/StatementSection.astro";
import { statementEn } from "../data/mission.en";
import ReviewSection from '../components/ReviewSection.astro';
import { reviewsEn } from "../data/reviews.en";
import GallerySection from "../components/GallerySection.astro";
import { aboutGalleryEn } from "../data/gallery.en";


const pageTitle = "About";
---

<BaseLayout pageTitle={pageTitle}>
  <h1>{pageTitle}</h1>
  <p>
    Map’s Tour Buses provides safe, comfortable, and reliable charter bus transportation
    for groups traveling across Texas and into Mexico.
  </p>

  <p>
    We pride ourselves on professional service, well-maintained vehicles, and experienced
    drivers who know the roads and destinations throughout the region.
  </p>

  <p>
    At Map’s Tour Buses, we believe the journey should be just as enjoyable as the destination.
    We look forward to being a part of your next adventure.
  </p>

  <GallerySection ariaLabel="Photo gallery" items={aboutGalleryEn} />
  <PerksSection lang="en" items={perksEn} />
  <StatementSection title={statementEn.title} text={statementEn.text} />
  <ReviewSection lang="en" items={reviewsEn}/>

</BaseLayout>