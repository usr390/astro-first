---
import Faq from '../../components/Faq.astro';
import Hero from '../../components/Hero.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ReviewsSection from "../../components/ReviewSection.astro";
import { reviewsEs } from "../../data/reviews.es";
import { faqEs, faqTitleEs } from "../../data/faq.es";
import WhereWeTravel from "../../components/WhereWeTravel.astro";
import { whereWeTravelEs } from "../../data/whereWeTravel.es";


const pageTitle = "Inicio";
---

<BaseLayout pageTitle={pageTitle} lang="es">
  <Hero lang="es" />
  <WhereWeTravel content={whereWeTravelEs} />
  <Faq title={faqTitleEs} items={faqEs} />
  <ReviewsSection lang="es" items={reviewsEs} />
</BaseLayout>