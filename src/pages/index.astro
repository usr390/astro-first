---
import BaseLayout from '../layouts/BaseLayout.astro';
import Faq from '../components/Faq.astro';
import WhereWeTravel from '../components/WhereWeTravel.astro';

const pageTitle = "";
---

<BaseLayout pageTitle={pageTitle}>
  <section class="hero" aria-label="Kings Of The Road hero">
    <div class="hero__inner">
      <h2 class="hero__title">Kings Of The Road</h2>
      <p class="hero__subtitle">
        Comfortable, reliable charter bus tours across Texas and beyond. Perfect for groups,
        events, and day trips.
      </p>

      <div class="hero__actions">
        <a class="btn" href="/contact">Get a Quote</a>
        <a class="btn btn--ghost" href="/tours">View Tours</a>
      </div>
    </div>
  </section>

  <WhereWeTravel />
  <Faq />

</BaseLayout>