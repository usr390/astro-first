---
import BaseLayout from '../layouts/BaseLayout.astro';
import Faq from '../components/Faq.astro';
import Hero from '../components/Hero.astro';
import ReviewsSection from "../components/ReviewSection.astro";
import { reviewsEn } from "../data/reviews.en";
import { faqEn, faqTitleEn } from "../data/faq.en";
import WhereWeTravel from "../components/WhereWeTravel.astro";
import { whereWeTravelEn } from "../data/whereWeTravel.en";



const pageTitle = "Home";
---

<BaseLayout pageTitle={pageTitle} lang="en">
  <Hero lang="en" />
  <WhereWeTravel content={whereWeTravelEn} />
  <Faq title={faqTitleEn} items={faqEn} />  
  <ReviewsSection lang="en" items={reviewsEn} />
</BaseLayout>