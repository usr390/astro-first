---
const pathname = Astro.url.pathname;

// If you're already in /es, switch back to English
const isSpanish = pathname.startsWith("/es/");
const spanishPath = isSpanish ? pathname : `/es${pathname}`;
const englishPath = isSpanish ? pathname.replace(/^\/es/, "") : pathname;

// Make sure root becomes "/"
const normalizedEnglish = englishPath === "" ? "/" : englishPath;
---

<div id="main-menu" class="nav-links">
  <a href={isSpanish ? "/es/" : "/"}>Home</a>
  <a href={isSpanish ? "/es/tours" : "/tours"}>Tours</a>
  <a href={isSpanish ? "/es/about" : "/about"}>About Us</a>
  <a href={isSpanish ? "/es/contact" : "/contact"}>Contact Us</a>
  <a href={isSpanish ? "/es/faq" : "/faq"}>FAQ</a>

  {isSpanish ? (
    <a href={normalizedEnglish}>English</a>
  ) : (
    <a href={spanishPath}>En Espa√±ol</a>
  )}
</div>