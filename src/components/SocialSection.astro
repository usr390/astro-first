---
import Social from "./Social.astro";

export type SocialPlatform = "facebook" | "instagram";
export type SocialLink = { platform: SocialPlatform; username: string };

const { title, links } = Astro.props as {
  title: string;
  links: readonly SocialLink[];
};
---

<div class="footer-section">
  <h2>{title}</h2>

  <div class="socials">
    {links.map((l) => (
      <Social platform={l.platform} username={l.username} />
    ))}
  </div>
</div>