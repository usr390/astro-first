---
import { faqEs } from "../data/faq.es";
import type { FaqItem } from "../types/faq";

const { items = faqEs } = Astro.props;
---
<section class="faq">
  <h1>Preguntas Frecuentes</h1>
  {items.map((item: FaqItem) => (
    <details open={item.open}>
      <summary class="faq__question">{item.q}</summary>
      <p>{item.a}</p>
    </details>
  ))}
</section>

<style>
/* =========================
  FAQ
========================= */
.faq {
  max-width: 800px;
  margin: 3rem auto;
  padding: 0 1rem;
  display: grid;
  gap: 0.75rem;
  text-align: center;
}

.faq details {
  border: 1px solid rgba(0,0,0,0.12);
  border-radius: 14px;
  padding: 0.75rem 1rem;
  background: #fff;
  text-align: left;
  margin: 0; /* avoids double spacing since grid gap handles it */
}

.faq summary {
  cursor: pointer;
  font-weight: 700;
  list-style: none;
}

.faq summary::-webkit-details-marker {
  display: none;
}

.faq__question {
  color: var(--color-primary);
  font-weight: 600;
  transition: color 0.2s ease;
}

.faq__question:hover {
  color: var(--color-accent);
}

.faq p {
  margin: 0.75rem 0 0;
  line-height: 1.6;
}
</style>