---
import type { Perk } from "../types/perk";

type Lang = "en" | "es";

const {
  lang = "en",
  title,
  items,
} = Astro.props as {
  lang?: Lang;
  title?: string;
  items: readonly Perk[];
};

const defaultTitle =
  lang === "es" ? "Nuestros Beneficios" : "Why Travel With Us";
---

<section class="perks" aria-label={title ?? defaultTitle}>
  <h2 class="perks__title">{title ?? defaultTitle}</h2>

  <div class="perks__grid">
    {items.map((perk) => (
      <div class="perk-card">
        <div class="perk-card__icon" aria-hidden="true">
          {perk.icon === "bus" && (
            <svg viewBox="0 0 24 24">
              <path d="M4 16c0 1.1.9 2 2 2h1a2 2 0 0 0 4 0h2a2 2 0 0 0 4 0h1c1.1 0 2-.9 2-2V6c0-3-3-4-8-4S4 3 4 6v10z"/>
            </svg>
          )}

          {perk.icon === "shield" && (
            <svg viewBox="0 0 24 24">
              <path d="M12 2l7 4v6c0 5-3.5 9-7 10-3.5-1-7-5-7-10V6l7-4z"/>
            </svg>
          )}

          {perk.icon === "clock" && (
            <svg viewBox="0 0 24 24">
              <path d="M12 1a11 11 0 1 0 0 22A11 11 0 0 0 12 1zm1 11h5v2h-7V6h2v6z"/>
            </svg>
          )}

          {perk.icon === "users" && (
            <svg viewBox="0 0 24 24">
              <path d="M16 11c1.7 0 3-1.3 3-3s-1.3-3-3-3-3 1.3-3 3 1.3 3 3 3zM8 11c1.7 0 3-1.3 3-3S9.7 5 8 5 5 6.3 5 8s1.3 3 3 3zm0 2c-2.3 0-7 1.2-7 3.5V19h14v-2.5C15 14.2 10.3 13 8 13zm8 0c-.3 0-.6 0-1 .1 1.2.9 2 2 2 3.4V19h6v-2.5c0-2.3-4.7-3.5-7-3.5z"/>
            </svg>
          )}
        </div>

        <h3 class="perk-card__title">{perk.title}</h3>
        <p class="perk-card__desc">{perk.description}</p>
      </div>
    ))}
  </div>
</section>

<style>
.perks {
  max-width: 1100px;
  margin: 3.5rem auto;
  padding: 0 1rem;
  text-align: center;
}

.perks__title {
  font-size: clamp(1.8rem, 3vw, 2.3rem);
  font-weight: 800;
  color: var(--color-primary);
  margin-bottom: 1.75rem;
}

.perks__grid {
  display: grid;
  gap: 1.25rem;
}

@media (min-width: 768px) {
  .perks__grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

.perk-card {
  background: #fff;
  border-radius: 18px;
  padding: 1.5rem 1.25rem;
  box-shadow: 0 12px 28px rgba(0,0,0,0.08);
}

.perk-card__icon svg {
  width: 36px;
  height: 36px;
  fill: var(--color-accent);
  margin-bottom: 0.75rem;
}

.perk-card__title {
  font-weight: 700;
  margin: 0.5rem 0 0.25rem;
  color: var(--color-primary);
}

.perk-card__desc {
  margin: 0;
  font-size: 0.95rem;
  line-height: 1.5;
}
</style>