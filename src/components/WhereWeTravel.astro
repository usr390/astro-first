---
import type { WhereWeTravelContent } from "../types/whereWeTravel";

const { content } = Astro.props as { content: WhereWeTravelContent };
---

<section class="areas" aria-label={content.ariaLabel}>
  <header class="areas__header">
    <h2>{content.heading}</h2>
    <p>{content.intro}</p>
  </header>

  {content.areas.map((a) => (
    <article class="area-card">
      <img class="area-card__img" src={a.imgSrc} alt={a.imgAlt} loading="lazy" />

      <h3>{a.title}</h3>

      <p>{a.description}</p>

      <p class="area-card__subhead">{a.subhead}</p>

      <ul>
        {a.bullets.map((b) => <li>{b}</li>)}
      </ul>
    </article>
  ))}
</section>

<style>
  .areas {
    margin: 3.5rem auto 0;
    padding: 2.75rem 1rem;
  }

  .areas__header {
    max-width: 980px;
    margin: 0 auto 2rem;
    text-align: center;
  }

  .areas__header h2 {
    margin: 0 0 0.5rem;
    font-size: clamp(2rem, 4vw, 3rem);
    letter-spacing: -0.02em;
  }

  .areas__header p {
    margin: 0;
    font-size: clamp(1rem, 1.5vw, 1.25rem);
    opacity: 0.95;
  }

  .area-card {
    max-width: 980px;
    margin: 2rem auto 0;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.14);
    border-radius: 28px;
    padding: 1.25rem;
  }

  .area-card__img {
    width: 100%;
    height: min(360px, 55vw);
    object-fit: cover;
    border-radius: 22px;
    display: block;
    margin: 0 auto 1.25rem;
  }

  .area-card h3 {
    text-align: center;
    margin: 0.25rem 0 0.75rem;
    font-size: 1.6rem;
  }

  .area-card p {
    max-width: 860px;
    margin: 0.25rem auto;
    line-height: 1.7;
    opacity: 0.95;
    text-align: center;
  }

  .area-card__subhead {
    margin-top: 1.25rem;
    font-weight: 700;
    opacity: 1;
  }

    .area-card ul {
    max-width: 860px;
    margin: 1rem auto 0.5rem;
    padding-left: 0;
    list-style-position: inside;
    line-height: 1.8;
    text-align: center;
    }

  .area-card li {
    opacity: 0.95;
  }
</style>